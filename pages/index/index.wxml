<!--index.wxml-->
<view class="container">
  <view class="page_bd">
     <swiper class="swiper-box" indicator-dots="{{indicatorDots}}"
     autoplay="{{autoplay}}" interval="{{interval}}"
      duration="{{duration}}">   
       <block wx:key="{{imgUrls}}">     
         <swiper-item >  
          <image src="{{item}}" class="slide-image" width="355" height="150"/> 
         </swiper-item> 
       </block> 
     </swiper>
  </view>
</view>